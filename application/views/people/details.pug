include ../includes/nav.pug
div.container
	.row.heading
		.col-md-6
			h3
				i.fa.fa-tags
				span(rv-text='page.action')
				span(rv-text='page.title')
		.col-md-6
			.pull-right
				a.btn.btn-default.btn-sm.js-esc(rv-on-click='events.goto | wrap page.path')
					i.fa.fa-share.fa-flip-horizontal(aria-hidden='true')
					|  Go Back
	hr
	form(rv-method='form.method' rv-action='form.action')
		.form-group(rv-if='model.id')
			label(for='id') Id
			input.form-control#id(type='text' name='id' rv-value='model.id')

		.form-group
			label(for='firstname') Firstname
			input.form-control#firstname(type='text' name='firstname' rv-value='model.firstname')

		.form-group
			label(for='lastname') Lastname
			input.form-control#lastname(type='text' name='lastname' rv-value='model.lastname')

		.form-group
			label(for='price') Price
			input.form-control#price(type='text' name='price' rv-value='model.price')

		button.btn.btn-default(type='submit' rv-on-click='events.submit') Submit