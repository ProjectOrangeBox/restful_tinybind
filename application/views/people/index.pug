include ../includes/nav.pug
div.container
	.row.heading
		.col-md-6
			h3
				i.fa.fa-th
				span(rv-text='page.titles')
				small#table-search-field-count
		.col-md-6
			.pull-right
				.form-group.has-feedback(style='display:inline-block')
					input#bound-table-search-field.form-control.input-sm(type='text' style='width:222px;' placeholder='search')
					i.fa.fa-search.form-control-feedback
				a.btn.btn-default.btn-sm.js-new(rv-on-click='events.naviagte | wrap "%s/create" page.path')
					i.fa.fa-magic
					|  New {page.title}
	.row
		table.table.table-sticky-header.bound-table-search.table-sort.table-hover
			thead
				tr.panel-default
					th.panel-heading.text-center Id
					th.panel-heading First Name
					th.panel-heading Last Name
					th.panel-heading Price
					th.panel-heading.text-center.nosort Actions
			tbody
				tr(rv-each-record='model' rv-data-id='record.id')
					td.text-center(rv-text='record.id')
					td(rv-text='record.firstname')
					td(rv-text='record.lastname')
					td(rv-text='record.price')
					td.text-center.actions
						a(rv-on-click='events.navigate | wrap "%s/edit/%s" page.path record.id')
							i.fa.fa-edit.fa-lg
						a(rv-on-click='events.delete | wrap page.path record.id')
							i.fa.fa-trash.fa-lg