{
    "require": {
        "codeigniter/framework": "^3.1",
        "mmucklo/krumo": "*",
        "zordius/lightncandy": "dev-master"
    },
    "orange": {
        "version": "2.0.0",
        "type": "package",
        "priority": 50,
        "notes": "",
        "cli": {},
        "help": "",
        "tables": "",
        "access": "",
        "menubar": "",
        "setting": "",
		    "symlink": [{
			    	"# /public/... ": "# /vendor/... ",
			    	"/public/theme/orange": "/packages/projectorangebox/theme-orange/public/theme/orange",
			    	"/public/assets/backorder": "/packages/quadratec/backorder/public/assets/backorder",
			    	"/public/assets/stock-status-check": "/packages/quadratec/stock-status-check/public/assets/stock-status-check"
		    }],
				"clean": {
					"sessions": [
						"rm -fdr {rootpath}/var/sessions/*"
					],
					"caches": [
						"rm -fdr {rootpath}/var/cache/*",
						"rm -fdr {rootpath}/var/uploads/*",
						"rm -fdr {rootpath}/var/downloads/*"
					]
				},
				"repair": [
					"mkdir {rootpath}/bin",
					"mkdir {rootpath}/support",
					"mkdir {rootpath}/support/migrations",
					"mkdir {rootpath}/support/backups",
					"mkdir {rootpath}/public/assets",
					"mkdir {rootpath}/public/theme",
					"mkdir {rootpath}/var",
					"mkdir {rootpath}/var/cache",
					"mkdir {rootpath}/var/uploads",
					"mkdir {rootpath}/var/downloads",
					"mkdir {rootpath}/var/emails",
					"mkdir {rootpath}/var/logs",
					"mkdir {rootpath}/var/sessions",
					"find {rootpath} -type f | sudo xargs chmod 664",
					"find {rootpath} -type d | sudo xargs chmod 775",
					"chmod -R 777 {rootpath}/var",
					"chmod -R 777 {rootpath}/var/cache/*",
					"chmod -R 777 {rootpath}/var/uploads/*",
					"chmod -R 777 {rootpath}/var/downloads/*",
					"chmod -R 777 {rootpath}/var/emails/*",
					"chmod -R 777 {rootpath}/var/logs/*",
					"chmod -R 777 {rootpath}/var/sessions/*",
					"chmod -R 777 {rootpath}/bin/*",
					"chmod -R 777 {rootpath}/support/backups"
				]
    }
}
