{
  "require": {
    "codeigniter/framework": "^3.1",
    "mmucklo/krumo": "*",
    "zordius/lightncandy": "dev-master"
  },
  "orange": {
    "version": "2.0.0",
    "type": "package",
    "priority": 50,
    "notes": "",
    "cli": {
    },
    "help": "",
    "tables": "",
    "access": "",
    "menubar": "",
    "setting": "",
    "symlink": [
      {
        "# /public/... ": "# /vendor/... ",
        "/public/theme/orange": "/packages/projectorangebox/theme-orange/public/theme/orange",
        "/public/assets/backorder": "/packages/quadratec/backorder/public/assets/backorder",
        "/public/assets/stock-status-check": "/packages/quadratec/stock-status-check/public/assets/stock-status-check"
      }
    ],
    "clean": {
      "sessions": [
        "rm -fdr {ESCROOTPATH}/var/sessions/*"
      ],
      "caches": [
        "rm -fdr {ESCROOTPATH}/var/cache/*",
        "rm -fdr {ESCROOTPATH}/var/uploads/*",
        "rm -fdr {ESCROOTPATH}/var/downloads/*"
      ]
    },
    "repair": [
      "mkdir {ESCROOTPATH}/bin",
      "mkdir {ESCROOTPATH}/support",
      "mkdir {ESCROOTPATH}/support/migrations",
      "mkdir {ESCROOTPATH}/support/backups",
      "mkdir {ESCROOTPATH}/public/assets",
      "mkdir {ESCROOTPATH}/public/theme",
      "mkdir {ESCROOTPATH}/var",
      "mkdir {ESCROOTPATH}/var/cache",
      "mkdir {ESCROOTPATH}/var/uploads",
      "mkdir {ESCROOTPATH}/var/downloads",
      "mkdir {ESCROOTPATH}/var/emails",
      "mkdir {ESCROOTPATH}/var/logs",
      "mkdir {ESCROOTPATH}/var/sessions",
      "find {ESCROOTPATH} -type f | sudo xargs chmod 664",
      "find {ESCROOTPATH} -type d | sudo xargs chmod 775",
      "chmod -R 777 {ESCROOTPATH}/var",
      "chmod -R 777 {ESCROOTPATH}/var/cache/*",
      "chmod -R 777 {ESCROOTPATH}/var/uploads/*",
      "chmod -R 777 {ESCROOTPATH}/var/downloads/*",
      "chmod -R 777 {ESCROOTPATH}/var/emails/*",
      "chmod -R 777 {ESCROOTPATH}/var/logs/*",
      "chmod -R 777 {ESCROOTPATH}/var/sessions/*",
      "chmod -R 777 {ESCROOTPATH}/bin/*",
      "chmod -R 777 {ESCROOTPATH}/support/backups"
    ],
    "groups": {
      "complete": [
        "{ESCROOTPATH}/bin/backup_db.php {ESCROOTPATH}/support/backups",
        "{ESCROOTPATH}/bin/take_site.php down",
        "{ESCROOTPATH}/bin/git.php update",
        "{ESCROOTPATH}/bin/repair.php",
        "{ESCROOTPATH}/bin/clean.php caches",
        "{ESCROOTPATH}/bin/link.php",
        "{ESCROOTPATH}/bin/take_site.php up",
        "{ESCROOTPATH}/bin/git.php"
      ],
      "basic": [
        "{ESCROOTPATH}/bin/backup_db.php {ESCROOTPATH}/support/backups",
        "{ESCROOTPATH}/bin/git.php update",
        "{ESCROOTPATH}/bin/repair.php",
        "{ESCROOTPATH}/bin/clean.php caches",
        "{ESCROOTPATH}/bin/link.php",
        "{ESCROOTPATH}/bin/git.php"
      ]
    }
  }
}